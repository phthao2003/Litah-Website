
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading about-page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Welcome to Litah Shop</h2>
                    <span>We are delighted to be at your service, providing assistance with utmost care and dedication.</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->
<style>


    button {
        background-color: black;
        width: 100%;
        color: white;
        padding: 15px;
        margin: 10px 0px;
        border: none;
        cursor: pointer;
    }


    input[type=text], input[type=password] {
        width: 100%;
        margin: 8px 0;
        padding: 12px 20px;
        display: inline-block;
        border: 2px solid black;
        box-sizing: border-box;
    }

    button:hover {
        opacity: 0.7;
    }

    .cancelbtn {
        width: auto;
        padding: 10px 18px;
        margin: 10px 5px;
    }
</style>

<center> <h1> Login </h1> </center>
<form>
    <div class="container">
        <label><b>Usename:</b> </label>
        <input type="text" placeholder="Usename" name="username" required>
        <label><b>Password:</b></label>
        <input type="password" placeholder="Password" name="password" required>
        <button type="submit">Login</button>
        <input type="checkbox" checked="checked"> Remember me
        <button type="button" class="cancelbtn">Cancel</button>
        <a href="#"> Forgot Password? </a>
        <br />
        Don't have an account yet? <a @Html.ActionLink("Sign Up", "DetailsNoID", "Shop")</a>
        <br />

    </div>
</form>
<!-- ***** Contact Area Starts ***** -->
